<?xml version="1.0" encoding="UTF-8"?>
<project name="module_barberiansbox" default="compile.module.barberiansbox">
  <dirname property="module.barberiansbox.basedir" file="${ant.file.module_barberiansbox}"/>
  
  <property name="module.jdk.home.barberiansbox" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.barberiansbox" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.barberiansbox" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.barberiansbox" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="barberiansbox.output.dir" value="${module.barberiansbox.basedir}/../../out/production/classes"/>
  <property name="barberiansbox.testoutput.dir" value="${module.barberiansbox.basedir}/../../out/test/classes"/>
  
  <path id="barberiansbox.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="barberiansbox.module.production.classpath">
    <path refid="${module.jdk.classpath.barberiansbox}"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-databind:2.9.6.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-core:2.9.6.classpath"/>
    <path refid="library._servidor.classpath"/>
  </path>
  
  <path id="barberiansbox.runtime.production.module.classpath">
    <pathelement location="${barberiansbox.output.dir}"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-databind:2.9.6.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-core:2.9.6.classpath"/>
    <path refid="library._servidor.classpath"/>
  </path>
  
  <path id="barberiansbox.module.classpath">
    <path refid="${module.jdk.classpath.barberiansbox}"/>
    <pathelement location="${barberiansbox.output.dir}"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-databind:2.9.6.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-core:2.9.6.classpath"/>
    <path refid="library._servidor.classpath"/>
  </path>
  
  <path id="barberiansbox.runtime.module.classpath">
    <pathelement location="${barberiansbox.testoutput.dir}"/>
    <pathelement location="${barberiansbox.output.dir}"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-databind:2.9.6.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.gradle:_com.fasterxml.jackson.core:jackson-core:2.9.6.classpath"/>
    <path refid="library._servidor.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.barberiansbox">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.barberiansbox">
    <patternset refid="excluded.from.module.barberiansbox"/>
  </patternset>
  
  <path id="barberiansbox.module.sourcepath">
    <dirset dir="${module.barberiansbox.basedir}/../../../BarberiansBox">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.barberiansbox" depends="compile.module.barberiansbox.production,compile.module.barberiansbox.tests" description="Compile module BarberiansBox"/>
  
  <target name="compile.module.barberiansbox.production" depends="register.custom.compilers" description="Compile module BarberiansBox; production classes">
    <mkdir dir="${barberiansbox.output.dir}"/>
    <javac2 destdir="${barberiansbox.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.barberiansbox}/javac">
      <compilerarg line="${compiler.args.barberiansbox}"/>
      <bootclasspath refid="barberiansbox.module.bootclasspath"/>
      <classpath refid="barberiansbox.module.production.classpath"/>
      <src refid="barberiansbox.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.barberiansbox"/>
    </javac2>
    
    <copy todir="${barberiansbox.output.dir}">
      <fileset dir="${module.barberiansbox.basedir}/../../src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.barberiansbox.basedir}/../../src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.barberiansbox.tests" depends="register.custom.compilers,compile.module.barberiansbox.production" description="compile module BarberiansBox; test classes" unless="skip.tests"/>
  
  <target name="clean.module.barberiansbox" description="cleanup module">
    <delete dir="${barberiansbox.output.dir}"/>
    <delete dir="${barberiansbox.testoutput.dir}"/>
  </target>
</project>